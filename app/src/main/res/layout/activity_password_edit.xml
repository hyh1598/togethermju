<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <EditText
        android:gravity="center"
        android:inputType="textPassword"
        android:password="true"
        android:id="@+id/present_password"
        android:hint="현재 비밀번호를 입력하세요."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="#747474"/>

    <EditText
        android:gravity="center"
        android:inputType="textPassword"
        android:password="true"
        android:id="@+id/new_user_password"
        android:hint="변경할 비밀번호를 입력하세요."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="#747474"/>

    <EditText
        android:gravity="center"
        android:inputType="textPassword"
        android:password="true"
        android:id="@+id/check_new_user_password"
        android:hint="변경할 비밀번호를 확인하세요."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="#747474"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:onClick="clickBackButton"
            android:text="이전"
            android:background="@drawable/radius_button_gray"
            android:id="@+id/back_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

        <Button
            android:onClick="clickRegisterButton"
            android:text="가입"
            android:background="@drawable/radius_button_blue"
            android:id="@+id/register_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>
    </LinearLayout>

</LinearLayout>
