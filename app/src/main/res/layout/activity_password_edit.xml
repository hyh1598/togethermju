<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:inputType="textPassword"
            android:password="true"
            android:id="@+id/present_password"
            android:hint="현재 비밀번호를 입력하세요."
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#747474"/>

        <EditText
            android:inputType="textPassword"
            android:password="true"
            android:id="@+id/new_user_password"
            android:hint="변경할 비밀번호를 입력하세요."
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#747474"/>

        <EditText
            android:inputType="textPassword"
            android:password="true"
            android:id="@+id/check_new_user_password"
            android:hint="변경할 비밀번호를 확인하세요."
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#747474"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:onClick="clickCancelButton"
            android:text="취소"
            android:background="@drawable/radius_button_gray"
            android:id="@+id/cancel_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

        <Button
            android:onClick="clickChangeButton"
            android:text="변경"
            android:background="@drawable/radius_button_blue"
            android:id="@+id/change_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>
    </LinearLayout>

</LinearLayout>
